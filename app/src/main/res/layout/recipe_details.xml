<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/recipeDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="30dp"
        android:layout_marginTop="32dp"
        android:text="Message Goes Here"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recipeDetailsImage"
        android:textSize="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/recipeDetailsTitle"
        app:layout_constraintTop_toBottomOf="@+id/recipeDetailsTitle" />


    <TextView
        android:id="@+id/recipeDetailsSummary"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="recipeInfoSum"
        app:layout_constraintStart_toStartOf="@+id/recipeDetailsImage"
        app:layout_constraintTop_toBottomOf="@+id/recipeDetailsImage" />
</androidx.constraintlayout.widget.ConstraintLayout>